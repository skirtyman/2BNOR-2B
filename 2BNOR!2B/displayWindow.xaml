<Window x:Class="_2BNOR_2B.displayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2BNOR_2B"
        mc:Ignorable="d"
        Title="displayWindow" Height="400" Width="800" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Menu>
            <MenuItem Header="Export"/>
            <TextBlock x:Name="statusBox_mainWindow">
                Current Boolean Expression:
            </TextBlock>
        </Menu>

        <Canvas Grid.Row="1"  x:Name="truthTableCanvas" Background="Bisque" Margin="5"/>
    </Grid>
</Window>
