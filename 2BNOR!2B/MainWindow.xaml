<Window x:Class="_2BNOR_2B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2BNOR_2B"
        mc:Ignorable="d"
        Title="2B NOR !2B" MinHeight="600" MinWidth="1000" WindowState="Maximized">
    <!--Original window size, height: 450, width: 800-->

    <Window.Resources>
        <ResourceDictionary>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3.25*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.25*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        

        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontFamily="Consolas">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Diagram" Click="MenuItem_LoadDiagram"/>
                <MenuItem Header="_Save Diagram" Click="MenuItem_SaveDiagram"/>
                <MenuItem Header="_Export" Click="MenuItem_ExportDiagram" />
                <Separator/>
                <MenuItem Header="Exit" Click="MenuItem_CloseApp" />
            </MenuItem>
            <MenuItem Header="_Truth tables">
                <MenuItem Header="Generate From Diagram" Click="MenuItem_GenerateTableFromDiagram"/>
                <MenuItem Header="Generate From Expression" Click="MenuItem_GenerateTableFromExpression"/>
            </MenuItem>
            <MenuItem Header="_Boolean expressions">
                <MenuItem Header="Create Diagram" Click="MenuItem_GenerateDiagramFromExpression"/>
                <MenuItem Header="Find Expression" Click="MenuItem_GenerateExpressionFromDiagram"/>
            </MenuItem>
            <MenuItem Header="_Diagram Minimisation">
                <MenuItem Header="Minmise Diagram"/>
                <MenuItem Header="Minimise Expression" Click="MenuItem_MinimiseExpression"/>
            </MenuItem>
            <MenuItem Header="_Help" Click="MenuItem_OpenHelpWindow"/>
        </Menu>


        <Border Grid.Column="1" Grid.RowSpan="2" Grid.Row="1" BorderThickness="1" BorderBrush="Gray" Margin="5">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="TruthTableCanvas" Background="Bisque"/>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="0" Grid.Row="1" BorderThickness="1" BorderBrush="Gray" Margin="5">
            <Canvas x:Name="MainWindowCanvas" Background="Bisque" MouseDown="MainWindowCanvas_MouseDown"/>
        </Border>

        <Border Grid.Column="0" Grid.Row="2">

            <StackPanel Margin="5">
                <Border BorderBrush="Transparent" BorderThickness="1">
                    <TextBlock TextAlignment="Center" HorizontalAlignment="Center" FontFamily="Consolas" FontSize="18">
                        Logic Gates
                    </TextBlock>
                </Border>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Width="100">
                        <Image Source="/images/and_gate.png"/>
                        <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                            AND gate
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Width="100">
                        <Image Source="/images/or_gate.png"/>
                        <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                            OR gate
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Width="100">
                        <Image Source="/images/not_gate.png"/>
                        <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                            NOT gate
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Width="100">
                        <Image Source="/images/xor_gate.png"/>
                        <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                            XOR gate
                        </TextBlock>
                    </StackPanel>

                    <Button Width="150" Height="100" Click="Button_Click">
                        Clear
                    </Button>

                </StackPanel>
            </StackPanel>
        </Border>

        <StatusBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock x:Name="statusBar_Text" FontFamily="Consolas" FontSize="14"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>