<Window x:Class="_2BNOR_2B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2BNOR_2B"
        mc:Ignorable="d"
        Title="2B NOR !2B" Height="1080" Width="1920" WindowState="Maximized">
    <!--Original window size, height: 450, width: 800-->
    <Window.Resources>
        <ResourceDictionary>
            
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Diagram" Click="MenuItem_LoadDiagram"/>
                    <MenuItem Header="_Save Diagram" Click="MenuItem_SaveDiagram"/>
                    <MenuItem Header="_Export" Click="MenuItem_ExportDiagram" />
                    <Separator/>
                    <MenuItem Header="Exit" Click="MenuItem_CloseApp" />
                </MenuItem>
                <MenuItem Header="_Truth tables">
                <MenuItem Header="Generate From Diagram" Click="MenuItem_GenerateTableFromDiagram"/>
                <MenuItem Header="Generate From Expression" Click="MenuItem_GenerateTableFromExpression"/>
            </MenuItem>
            <MenuItem Header="_Boolean expressions">
                <MenuItem Header="Create Diagram" Click="MenuItem_GenerateDiagramFromExpression"/>
                <MenuItem Header="Find Expression" Click="MenuItem_GenerateExpressionFromDiagram"/>
            </MenuItem>
            <MenuItem Header="_Diagram Minimisation">
                <MenuItem Header="Minmise Diagram"/>
                <MenuItem Header="Minimise Expression" Click="MenuItem_MinimiseExpression"/>
            </MenuItem>
            <MenuItem Header="_Help" Click="MenuItem_OpenHelpWindow"/>
            <TextBlock x:Name="statusBox_mainWindow">
                Status:
            </TextBlock>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2.25*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="1" BorderBrush="Gray" Margin="5">
                <Canvas x:Name="MainWindowCanvas" Background="Bisque" MouseDown="MainWindowCanvas_MouseDown"/>
            </Border>

            <Border Grid.Column="1" BorderThickness="1" BorderBrush="Gray" Margin="5">
                <ScrollViewer>
                    <Canvas x:Name="TruthTableCanvas" Background="Bisque"/>
                </ScrollViewer>
            </Border>

            <Border Grid.Column="2">
                <ScrollViewer Grid.Column="1" HorizontalAlignment="Right" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                    <StackPanel Margin="5">
                        <Border BorderBrush="Transparent" BorderThickness="1">
                            <TextBlock TextAlignment="Center" HorizontalAlignment="Center" FontFamily="Consolas"
                           FontSize="18">
                            Logic Gates
                            </TextBlock>
                        </Border>

                        <ListView BorderBrush="Transparent">
                            <ListViewItem>
                                <StackPanel Width="200">
                                    <Image Source="/images/and_gate.png"/>
                                    <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                                        AND gate
                                    </TextBlock>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <StackPanel Width="200">
                                    <Image Source="/images/or_gate.png"/>
                                    <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                                        OR gate
                                    </TextBlock>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <StackPanel Width="200">
                                    <Image Source="/images/not_gate.png"/>
                                    <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                                        NOT gate
                                    </TextBlock>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <StackPanel Width="200">
                                    <Image Source="/images/xor_gate.png"/>
                                    <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                                        XOR gate
                                    </TextBlock>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <StackPanel Width="200">
                                    <Image Source="/images/nand_gate.png"/>
                                    <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                                        NAND gate
                                    </TextBlock>
                                </StackPanel>
                            </ListViewItem>
                            
                            <ListViewItem>
                                <StackPanel Width="200">
                                    <Image Source="/images/nor_gate.png"/>
                                    <TextBlock TextAlignment="Center" FontFamily="Consolas" FontSize="18">
                                        NOR gate
                                    </TextBlock>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem>
                                <Button Width="200" Height="100" Background="#eeefed"
                                Click="componentSidePanel_AddBuiltinCircuit">
                                    <Button.Content>
                                        <StackPanel>
                                            <Image/>
                                            <TextBlock TextAlignment="Center" FontFamily="Consolas"
                                               FontSize="18">
                                        Add built-in <LineBreak/> circuit
                                            </TextBlock>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                            </ListViewItem>

                            <!--Debug button need to remove--> 
                            <ListViewItem>
                                <Button Width="200" Height="100" Click="Button_Click">
                                    Clear
                                </Button>
                            </ListViewItem>

                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </DockPanel>
</Window>